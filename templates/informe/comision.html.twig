{% extends 'base.html.twig' %}

{% block title %}
Informe de Comisiones
{% endblock %}

{% block body %}
<h2>Informe de Comisiones</h2>
<div class="col-md-6 col-12">
    {{ form(form) }}
</div>
    {% if resultado is not empty %}
        {% set i = 0  %}
        <table class="datos">
            <thead>
            <tr>
                <th>Fecha</th>
                {% for xx in resultado[0] %}
                    <th>{{ xx['us'] }}</th>

                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for key,res in resultado %}
            {% if  key != 0 %}
              {% set i = i+1 %}
           <tr>
               <th>{{ key }}</th>
                {% for xx in resultado[0] %}

                <td> {{ res[xx['us'].id] }}</td>
               {% endfor %}

            </tr>
            {% endif %}
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th>Cant.: </th>
                <th>{{ i }}</th>
                <th>TOTAL</th>
                {% for xx in resultado[0] %}
                    <th>{{ xx['comision'] |round(2) }}</th>

                {% endfor %}
            </tr>
            </tfoot>
        </table>
        <!-- /.datos -->
        
        
    {% endif %}
    
{% endblock %}

