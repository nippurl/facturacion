<form method="post" action="{{ path('gasto_delete', {'id': gasto.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gasto.id) }}">
    <button class="delete" >Delete</button>
</form>