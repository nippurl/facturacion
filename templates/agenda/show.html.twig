{% extends 'base.html.twig' %}

{% block title %}{{Agenda }}{% endblock %}

{% block body %}
    <h1> {{Agenda }}   </h1>

    <table class="table">
        <tbody>
                <tr>
                <th>Id</th>
                <td>{{ agenda.id }}</td>
            </tr>
                    <tr>
                <th>Fecha</th>
                <td>{{ agenda.fecha ? agenda.fecha|date('Y-m-d') : '' }}</td>
            </tr>
                    <tr>
                <th>Hora</th>
                <td>{{ agenda.hora ? agenda.hora|date('H:i:s') : '' }}</td>
            </tr>
            </tbody>
    </table>

    <a href="{{ path('agenda_index') }}" class="exit">Volver</a>

    <a href="{{ path('agenda_edit', {'id': agenda.id}) }}" class="edit">Editar</a>

    {{ include('agenda/_delete_form.html.twig') }}
{% endblock %}
